{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templatesBaseUri": {
            "type": "string"
        },
        "location": {
            "type": "string"
        }
    },
    "variables": {
        "baseUri"           : "../../",
        "lzTemplateUri"     : "[uri(deployment().properties.templateLink.uri, concat(variables('baseUri'),'2.definitions/lz-template-v4.0.json'))]",
        "lzConnectivityUri" : "[uri(deployment().properties.templateLink.uri, concat(variables('baseUri'),'1.environment/platform/connectivity/connectivity-lz.param.json'))]",
        "lzIdentityUri"     : "[uri(deployment().properties.templateLink.uri, concat(variables('baseUri'),'1.environment/platform/identity/new-identityconfig.json'))]",
        "lzManagementUri"   : "[uri(deployment().properties.templateLink.uri, concat(variables('baseUri'),'1.environment/platform/management/new-identityconfig.param.json'))]"
    },
    "resources": [
       {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-10",
            "Name":"Build-Platform-Connectivity",
            "location":"[parameters('location')]",
            "dependsOn": [],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[variables('lzTemplateUri')]"
                },
                "parameterslink": {
                    "uri":"[variables('lzConnectivityUri')]"
                }
            }
        },
       {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-10",
            "Name":"Build-Platform-Identity",
            "location":"[parameters('location')]",
            "dependsOn": [],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[variables('lzTemplateUri')]"
                },
                "parameterslink": {
                    "uri":"[variables('lzIdentityUri')]"
                }
            }
        },
       {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-10",
            "Name":"Build-Platform-Management",
            "location":"[parameters('location')]",
            "dependsOn": [],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[variables('lzTemplateUri')]"
                },
                "parameterslink": {
                    "uri":"[variables('lzManagementUri')]"
                }
            }
        }
    ],
    "outputs": {},
    "functions": []
}