{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templatesBaseUri": {
            "type": "string"
        },
        "location": {
            "type": "string"
        }
    },
    "variables": {
        "baseUri":"../../../",
        "lzTemplateUri": "[concat(variables('baseUri'),'2.definitions/new-lz-template-v4.0.json')]",
        "lzConnectivityUri": "[concat(variables('baseUri'),'1.environment/platform/connectivity/connectivity-lz.param.json')]",
        "lzIdentityUri": "[concat(variables('baseUri'),'1.environment/platform/identity/new-identityconfig.json')]",
        "lzManagementUri": "[concat(variables('baseUri'),'1.environment/platform/identity/new-identityconfig.param.json')]"
    },
    "resources": [
       {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-01",
            "Name":"2-Build-Platform-Connectivity",
            "location":"[parameters('location')]",
            "dependsOn": [],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[variables('lzTemplateUri')]"
                },
                "parameterslink": {
                    "uri":"[variables('lzConnectivityUri')]"
                }
            }
        }/*,
       {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-01",
            "Name":"2-Build-Platform-Identity",
            "location":"[parameters('location')]",
            "dependsOn": [
                "2-Build-Platform-Connectivity"
            ],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[variables('BuildIdentityTemplateUri')]"
                },
                "parameterslink": {
                    "uri":"[variables('IdentityParametersUri')]"
                }
            }
        }*/
    ],
    "outputs": {},
    "functions": []
}