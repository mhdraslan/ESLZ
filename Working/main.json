{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templatesBaseUri": {
            "type": "string"
        },
        "location": {
            "type": "string"
        }
    },
    "variables": {
        //"platformTemplateUri": "[concat(parameters('templatesBaseUri'),'/1.environment/platform/build-platform')]"
        "platformTemplateUri": "[concat(parameters('templatesBaseUri'),'/1.environment/landing zones/avd/intellisys-avd')]"
    },
    "resources": [
       {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-01",
            "Name":"1-Build-Platform",
            "location":"[parameters('location')]",
            "dependsOn": [],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[concat(variables('platformTemplateUri'),'.json')]"
                },
                "parameterslink": {
                    "uri":"[concat(variables('platformTemplateUri'),'.param.json')]"
                }
            }
        }
    ],
    "outputs": {},
    "functions": []
}
