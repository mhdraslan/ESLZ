{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {
        "baseUri"           : "../../../",
        "lzTemplateUri"     : "[uri(deployment().properties.templateLink.uri, concat(variables('baseUri'),'2.definitions/new-azure-lz.json'))]",
        "lzManagementUri"   : "[uri(deployment().properties.templateLink.uri, concat(variables('baseUri'),'1.environment/platform/management/management-lz.param.json'))]",
        "lzManagementCustomizationBaseUri"   : "[uri(deployment().properties.templateLink.uri, concat(variables('baseUri'),'1.environment/platform/management/management-lz-customization'))]"
    },
    "resources": [
        // STEP 1: BUILD THE MANAGEMENT LANDING ZONE
       {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-10",
            "Name":"Build-Platform-Management-LandingZone",
            "location":"[deployment().location]",
            "dependsOn": [],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[variables('lzTemplateUri')]"
                },
                "parameterslink": {
                    "uri":"[variables('lzManagementUri')]"
                }
            }
        },
        // STEP 2: DEPLOY CUSTOM LZ RESOURCES
       {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-10",
            "Name":"Build-Platform-Identity",
            "location":"[deployment().location]",
            "dependsOn": [],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[concat(variables('lzManagementCustomizationBaseUri'),'.json')]"
                },
                "parameterslink": {
                    "uri":"[concat(variables('lzManagementCustomizationBaseUri'),'.param.json')]"
                }
            }
        }
    ],
    "outputs": {},
    "functions": []
}