{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {
        "baseUri"           : ".",
        "platformTemplateUri"   : "[uri(deployment().properties.templateLink.uri, concat(variables('baseUri'),'/1.environment/platform/nkh-build-platform.json'))]",
        "lzsTemplateUri"        : "[uri(deployment().properties.templateLink.uri, concat(variables('baseUri'),'/1.environment/landing-zones/nkh-build-landing-zones.json'))]"
    },
    "resources": [
       {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-01",
            "Name":"Build-Platform",
            "location":"[deployment().location]",
            "dependsOn": [],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[variables('platformTemplateUri')]"
                }
            }
        },
       {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-01",
            "Name":"Build-Landing-Zones",
            "location":"[deployment().location]",
            "dependsOn": [],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[concat(variables('lzsTemplateUri'),'.json')]"
                }
            }
        }
    ],
    "outputs": {},
    "functions": []
}