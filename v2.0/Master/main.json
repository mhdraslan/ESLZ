{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {
        "baseUri"           : "",
        "platformTemplateUri": "[uri(deployment().properties.templateLink.uri, concat(variables('baseUri'),'/1.environment/platform/build-platform.json'))]",
        "avdTemplateUri": "[uri(deployment().properties.templateLink.uri, concat(variables('baseUri'),'/1.environment/landing-zones/avd/lz'))]"
    },
    "resources": [
       {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-01",
            "Name":"1-Build-Platform",
            "location":"[deployment().location]",
            "dependsOn": [],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[variables('platformTemplateUri')]"
                }
            }
        },
       {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-01",
            "Name":"1-Build-AVD-LandingZone",
            "location":"[deployment().location]",
            "dependsOn": [],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[concat(variables('avdTemplateUri'),'.json')]"
                },
                "parameterslink": {
                    "uri":"[concat(variables('avdTemplateUri'),'.param.json')]"
                }
            }
        }
    ],
    "outputs": {},
    "functions": []
}