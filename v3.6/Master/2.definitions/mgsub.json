{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/tenantDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deploymentUris": {
            "type": "object"
        },
        "managementGroups": {
            "type": "object",
            "defaultValue": {}
        },
        "subscriptions": {
            "type": "object",
            "defaultValue": {}
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        // Management Groups
        {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-07-01",
            "Name":"[concat('MG-',parameters('managementGroups').mgSettings[copyIndex()].name)]",
            "dependsOn": [],
            "location":"[deployment().location]",
            "copy": {
                "name": "ManagementGroupsCopy",
                "mode": "Serial",
                "count": "[length(parameters('managementGroups').mgSettings)]"
            },
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[parameters('deploymentUris').managementGroup]"
                },
                "parameters":{
                    "managementGroupId":{
                        "value": "[parameters('managementGroups').mgSettings[copyIndex()].id]"
                    },
                    "managementGroupName":{
                        "value":"[parameters('managementGroups').mgSettings[copyIndex()].name]"
                    },
                    "parentManagementGroupId":{
                        "value":"[parameters('managementGroups').mgSettings[copyIndex()].parent]"
                    }
                }
            }
        },

        // Subscriptions
        {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-07-01",
            "Name":"[concat('Subscription-',parameters('subscriptions').subSettings[copyIndex()].name)]",
            "dependsOn": [
                "ManagementGroupsCopy"
            ],
            "location":"[deployment().location]",
            "copy": {
                "name": "SubscriptionsCopy",
                "count": "[length(parameters('subscriptions').subSettings)]"
            },
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[parameters('deploymentUris').moveSubscription]"
                },
                "parameters":{
                    "subscriptionId":{
                        "value":"[parameters('subscriptions').subSettings[copyIndex()].id]"
                    },
                    "parentManagementGroupId":{
                        "value":"[parameters('subscriptions').subSettings[copyIndex()].parent]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}
