{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deploymentUris": {
            "type": "object"
        },
        "landingZones":{
            "type": "object",
            "defaultValue":{}
        }
    },
    "variables": {},
    "resources": [ 
        {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-10",
            "condition": "[parameters('landingZones').lzSettings[copyIndex()].build]",
            "Name":"[substring(concat('Start-LZ-',parameters('landingZones').lzSettings[copyIndex()].lzName),0,64)]",
            "subscriptionId": "[parameters('landingZones').lzSettings[copyIndex()].subscription.Id]",
            "location":"[deployment().location]",
            "dependsOn": [],
            "copy": {
                "name": "LandingZonesCopy",
                "count": "[length(parameters('landingZones').lzSettings)]",
                "mode": "Serial"
            },
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[uri(deployment().properties.templateLink.uri,parameters('deploymentUris').buildLzUri)]"
                },
                "parameters": {
                    "deploymentUris": {
                        "value":"[parameters('deploymentUris')]"
                    },
                    "environmentSettings": {
                        "value":"[parameters('landingZones').lzSettings[copyIndex()]]"
                    }
                }
            }
        }
    ],
    "outputs": {},
    "functions": []
}