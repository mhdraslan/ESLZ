{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deploymentLocation": {
            "type": "string"
        },
        "deploymentUris": {
            "type": "object"
        },
        "platformSubscriptions": {
            "type": "object"
        },
        "connectivityLzSettings":{
            "type": "object",
            "defaultValue":{}
        },
        "identityLzSettings": {
            "type": "object",
            "defaultValue":{}
        },
        "managementLzSettings":{
            "type": "object",
            "defaultValue":{}
        },
        "securityLzSettings":{
            "type": "object",
            "defaultValue":{}
        }
    },
    "variables": {
        "deplaymentNames":{
            "lzConnectivityDeploymentName": "Start-Platform-Connectivity-Build",
            "lzIdentityDeploymentName":"Start-Platform-Identity-Build",
            "lzManagementDeploymentName":"Start-Platform-Management-Build",
            "lzSecurityDeploymentName":"Start-Platform-Security-Build"
        }
    },
    "resources": [
        
        {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-10",
            "condition": "[parameters('connectivityLzSettings').build]",
            "Name":"[variables('deplaymentNames').lzConnectivityDeploymentName]",
            "subscriptionId": "[parameters('platformSubscriptions').Connectivity.Id]",
            "location":"[deployment().location]",
            "dependsOn": [],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[uri(parameters('deploymentUris').base,parameters('deploymentUris').buildConnectivityLzUri)]"
                },
                "parameters": {
                    "deploymentUris": {
                        "value":"[parameters('deploymentUris')]"
                    },
                    "platformSubscriptions":{
                        "value":"[parameters('platformSubscriptions')]"
                    },
                    "environmentSettings": {
                        "value":"[parameters('connectivityLzSettings')]"
                    }
                }
            }
        },
        {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-10",
            "condition": "[parameters('identityLzSettings').build]",
            "Name":"[variables('deplaymentNames').lzIdentityDeploymentName]",
            "subscriptionId": "[parameters('platformSubscriptions').Identity.Id]",
            "location":"[deployment().location]",
            "dependsOn": [
                "[variables('deplaymentNames').lzConnectivityDeploymentName]"
            ],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[uri(parameters('deploymentUris').base,parameters('deploymentUris').buildIdentityLzUri)]"
                },
                "parameters": {
                    "deploymentUris": {
                        "value":"[parameters('deploymentUris')]"
                    },
                    "platformSubscriptions":{
                        "value":"[parameters('platformSubscriptions')]"
                    },
                    "environmentSettings": {
                        "value":"[parameters('identityLzSettings')]"
                    }
                }
            }
        },
        {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-10",
            "Name":"[variables('deplaymentNames').lzManagementDeploymentName]",
            "location":"[deployment().location]",
            "dependsOn": [
                "[variables('deplaymentNames').lzConnectivityDeploymentName]"
            ],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[uri(parameters('deploymentUris').base,parameters('deploymentUris').buildManagementLzUri)]"
                },
                "parameters": {
                    "deploymentUris": {
                        "value":"[parameters('deploymentUris')]"
                    },
                    "platformSubscriptions":{
                        "value":"[parameters('platformSubscriptions')]"
                    },
                    "environmentSettings": {
                        "value":"[parameters('managementLzSettings')]"
                    }
                }
            }
        }/*,
        {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-10",
            "Name":"[variables('deplaymentNames').lzSecurityDeploymentName]",
            "location":"[deployment().location]",
            "dependsOn": [
                "[variables('deplaymentNames').lzConnectivityDeploymentName]"
            ],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[uri(parameters('deploymentUris').base,parameters('deploymentUris').lzTemplateUri)]"
                },
                "parameterslink": {
                    "uri":"[uri(parameters('deploymentUris').base,parameters('deploymentUris').lzSecurityUri)]"
                }
            }
        }*/
    ],
    "outputs": {
        "test": {
            "type":"string",
            "value": "[uri(parameters('deploymentUris').base,parameters('deploymentUris').buildConnectivityLzUri)]"
        }
    },
    "functions": []
}