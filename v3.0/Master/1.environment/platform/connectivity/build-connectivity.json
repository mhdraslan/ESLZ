{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deploymentUris": {
            "type": "object"
        },
        "subscriptions": {
            "type": "object"
        },
        "environmentSettings": {
            "type": "object"
        }
    },
    "variables": {
        "deplaymentNames":{
            "lzConnectivityResourceGroupsDeploymentName": "Build-Platform-Connectivity-LZ-ResourceGroups",
            "lzConnectivityNetworkingDeploymentName":"Build-Platform-Connectivity-LZ-Networking",
            "lzConnectivityVirtualMachinesDeploymentName":"Build-Platform-Connectivity-LZ-VirtualMachines",
            "lzConnectivityNvaDeploymentName":"Build-Platform-Connectivity-LZ-NVAs"

        }
    },
    "resources": [
        // Build Resource Groups
        {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-10",
            "Name":"[variables('deplaymentNames').lzConnectivityResourceGroupsDeploymentName]",
            "location":"[deployment().location]",
            "dependsOn": [],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[uri(deployment().properties.templateLink.uri,parameters('deploymentUris').defResourceGroupsUri)]"
                },
                "parameters": {
                    "deploymentUris":{
                        "value":"[parameters('deploymentUris')]"
                    },
                    "subscriptionName":{
                        "value":"[parameters('subscriptions').connectivity.Name]"
                    },
                    "subscriptionId":{
                        "value":"[parameters('subscriptions').connectivity.Id]"
                    },
                    "resourceGroups":{
                        "value":"[parameters('environmentSettings').resourceGroups]"
                    }
                }
            }
        },
        // Build networking
        {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-10",
            "Name":"[variables('deplaymentNames').lzConnectivityNetworkingDeploymentName]",
            "location":"[deployment().location]",
            "dependsOn": [
                "[variables('deplaymentNames').lzConnectivityResourceGroupsDeploymentName]" 
            ],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[uri(deployment().properties.templateLink.uri,parameters('deploymentUris').defNetworkingUri)]"
                },
                "parameters": {
                    "deploymentUris":{
                        "value":"[parameters('deploymentUris')]"
                    },
                    "subscriptionName":{
                        "value":"[parameters('subscriptions').connectivity.Name]"
                    },
                    "subscriptionId":{
                        "value":"[parameters('subscriptions').connectivity.Id]"
                    },
                    "vnets":{
                        "value":"[parameters('environmentSettings').vnets]"
                    },
                    "subnets":{
                        "value":"[parameters('environmentSettings').subnets]"
                    },
                    "routes":{
                        "value":"[parameters('environmentSettings').routes]"
                    },
                    "privateDnsZones": {
                        "value": "[parameters('environmentSettings').privateDnsZones]"
                    }
                }
            }
        },
        // Build virtual machines
        {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-10",
            "Name":"[variables('deplaymentNames').lzConnectivityVirtualMachinesDeploymentName]",
            "location":"[deployment().location]",
            "dependsOn": [
                "[variables('deplaymentNames').lzConnectivityNetworkingDeploymentName]" 
            ],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[uri(deployment().properties.templateLink.uri,parameters('deploymentUris').defVirtualMachinesUri)]"
                },
                "parameters": {
                    "deploymentUris":{
                        "value":"[parameters('deploymentUris')]"
                    },
                    "subscriptionName":{
                        "value":"[parameters('subscriptions').connectivity.Name]"
                    },
                    "subscriptionId":{
                        "value":"[parameters('subscriptions').connectivity.Id]"
                    },
                    "windowsVMs":{
                        "value":"[parameters('environmentSettings').windowsVMs]"
                    },
                    "linuxVMs":{
                        "value":"[parameters('environmentSettings').linuxVMs]"
                    }
                }
            }
        },
        // Build NVAs
        {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2019-05-10",
            "Name":"[variables('deplaymentNames').lzConnectivityNvaDeploymentName]",
            "location":"[deployment().location]",
            "dependsOn": [
                "[variables('deplaymentNames').lzConnectivityNetworkingDeploymentName]"
            ],
            "properties":{
                "mode":"Incremental",
                "templatelink":{
                    "uri":"[uri(deployment().properties.templateLink.uri,parameters('deploymentUris').defNvaUri)]"
                },
                "parameters": {
                    "deploymentUris":{
                        "value":"[parameters('deploymentUris')]"
                    },
                    "subscriptionName":{
                        "value":"[parameters('subscriptions').connectivity.Name]"
                    },
                    "subscriptionId":{
                        "value":"[parameters('subscriptions').connectivity.Id]"
                    },
                    "azFirewall":{
                        "value":"[parameters('environmentSettings').azFirewall]"
                    },
                    "azBastion":{
                        "value":"[parameters('environmentSettings').azBastion]"
                    },
                    "azVpnGateway":{
                        "value":"[parameters('environmentSettings').azVpnGateway]"
                    },
                    "azAppGatewayV2":{
                        "value":"[parameters('environmentSettings').azAppGatewayV2]"
                    }
                }
            }
        }
    ],
    "outputs": {},
    "functions": []
}